<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/united_blue</item>
        <item name="colorPrimaryDark">@color/united_blue</item>
        <item name="colorAccent">@color/united_blue</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="BottomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/greenprogress</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="SendFabTheme" parent="AppTheme">
        <item name="colorAccent">@android:color/white</item>
    </style>


    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_full</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
        <item name="android:numStars">5</item>
    </style>

</resources>
