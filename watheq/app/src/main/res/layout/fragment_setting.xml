<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:orientation="vertical"
        tools:context="com.watheq.watheq.setting.SettingFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/change_lang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableEnd="@drawable/ic_arrow"
                            android:gravity="start"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/lang"
                            android:textColor="@color/pastel_blue"
                            android:textSize="16sp" />

                        <!--<View-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="0.5dp"-->
                            <!--android:layout_marginEnd="@dimen/_10sdp"-->
                            <!--android:layout_marginStart="@dimen/_10sdp"-->
                            <!--android:background="@color/schedule_un_selected_day" />-->

                        <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:drawableEnd="@drawable/ic_arrow"-->
                            <!--android:gravity="start"-->
                            <!--android:padding="@dimen/_10sdp"-->
                            <!--android:text="@string/credit"-->
                            <!--android:textColor="@color/pastel_blue"-->
                            <!--android:textSize="16sp" />-->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/schedule_un_selected_day" />

                        <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:drawableEnd="@drawable/ic_arrow"-->
                            <!--android:gravity="start"-->
                            <!--android:padding="@dimen/_10sdp"-->
                            <!--android:text="@string/oprations"-->
                            <!--android:textColor="@color/pastel_blue"-->
                            <!--android:textSize="16sp" />-->

                        <!--<View-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="0.5dp"-->
                            <!--android:layout_marginEnd="@dimen/_10sdp"-->
                            <!--android:layout_marginStart="@dimen/_10sdp"-->
                            <!--android:background="@color/schedule_un_selected_day" />-->

                        <TextView
                            android:id="@+id/report_problem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_arrow"
                            android:gravity="start"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/report_problem"
                            android:textColor="@color/pastel_blue"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/schedule_un_selected_day" />

                        <TextView
                            android:id="@+id/logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_arrow"
                            android:gravity="start"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/logout"
                            android:textColor="@color/pastel_blue"
                            android:textSize="16sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/terms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_arrow"
                            android:gravity="start"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/privacy"
                            android:textColor="@color/pastel_blue"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/schedule_un_selected_day" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_arrow"
                            android:gravity="start"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/help"
                            android:textColor="@color/pastel_blue"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@color/schedule_un_selected_day" />

                        <TextView
                            android:id="@+id/policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_arrow"
                            android:gravity="start"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/policy"
                            android:textColor="@color/pastel_blue"
                            android:textSize="16sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mdtp_transparent_black"
        android:visibility="gone" />

    <include layout="@layout/bottom_sheet_lang" />
</android.support.design.widget.CoordinatorLayout>