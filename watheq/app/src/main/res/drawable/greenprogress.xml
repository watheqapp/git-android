<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#ffe8ebf3"
                android:centerColor="#ffe8ebf3"
                android:centerY="0.75"
                android:endColor="#ffe8ebf3"
                android:angle="270"
                />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#fff1c250"
                    android:endColor="#fff1c250"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>